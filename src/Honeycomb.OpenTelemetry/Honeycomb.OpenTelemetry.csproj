<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>netstandard2.0;net452;net46;net461</TargetFrameworks>
    <Description>Honeycomb OpenTelemetry SDK</Description>
    <RootNamespace>Honeycomb.OpenTelemetry</RootNamespace>
    <Version>0.1.0</Version>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="OpenTelemetry" Version="1.0.1" />
    <PackageReference Include="OpenTelemetry.Exporter.OpenTelemetryProtocol" Version="1.0.1" />
    <!-- OpenTelemetry Instrumenation packages, require  -->
    <PackageReference Include="OpenTelemetry.Instrumentation.AspNetCore" Version="1.0.1-rc5" />
    <PackageReference Include="OpenTelemetry.Instrumentation.Http" Version="1.0.1-rc5" />
    <PackageReference Include="OpenTelemetry.Instrumentation.SqlClient" Version="1.0.1-rc5" />
  </ItemGroup>

  <!-- This instrumentation pacakge is only included for specific targeted frameworks -->  
  <ItemGroup Condition=" '$(TargetFramework)' == 'netstandard2.1' ">
    <PackageReference Include="OpenTelemetry.Instrumentation.GrpcNetClient" Version="1.0.0-rc5" />
  </ItemGroup>

  <ItemGroup>
    <InternalsVisibleTo Include="Honeycomb.OpenTelemetry.Tests" />
  </ItemGroup>

</Project>
